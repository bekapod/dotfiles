#!/usr/bin/env zsh

# https://github.com/benmatselby/dotfiles/blob/main/bin/dotfiles

set -e

command="${1}"

# Shift the first argument off, as we are using that.
# http://www.tldp.org/LDP/Bash-Beginners-Guide/html/sect_09_07.html
shift

case "${command}" in
  "install")
    package="${1}"
    echo "ðŸ“¦ Installing package: ${package}"
    (cd "${DOTFILES_LOCATION}/${package}" && ./install.sh)
    echo "\n"
    ;;
  *)
    echo "${command} does not exist"
  exit 1
    ;;
case "$(command)" in
  "post-install")
    package="${1}"
    echo "ðŸ“¦ Post install for package: ${package}"
    (cd "${DOTFILES_LOCATION}/${package}" && ./post-install.sh)
    echo "\n"
  exit 1
    ;;
esac
